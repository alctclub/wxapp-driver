@import '../templates/bottomButton.wxss';
page {
    height: 100%;
    min-height: 100%;
    background-color: #ffffff;
}

.container {
    background-color: #ffffff;
}

.headerTip {
    margin: 60rpx 48rpx 0 48rpx;
    display: flex;
    font-size: 30rpx;
    width: 100%;
    color: #999999;
}

.imageContainer {
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
}

.img_upload {
    margin: 32rpx 63rpx;
    width: 100%;
}

.img_box {
    margin: 52rpx 16rpx 0 48rpx;
    width: 280rpx;
    height: 200rpx;
    position: relative;
}

.img_box_pickup {
    margin: 32rpx 63rpx;
    width: 100%;
    height: 400rpx;
    position: relative;
}

.img_display {
    width: 100%;
    height: 100%;
}

.deletebtn {
    height: 40rpx;
    width: 40rpx;
    border-radius: 20rpx;
    background-color: #1aad19;
    color: white;
    position: absolute;
    top: -18rpx;
    right: -20rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.goods {
    display: flex;
    flex-direction: column;
    color: #666666;
    font-size: 24rpx;
    padding: 40rpx 36rpx 6rpx 36rpx;
}

.tipMessage {
    color: #999999;
    font-size: 32rpx;
}

.goodList {
    margin-top: 24rpx;
    font-size: 28rpx;
    border-top: 2rpx #e0e0e0 solid;
    padding-top: 40rpx;
    padding-bottom: 24rpx;
    border-bottom: 2rpx #e0e0e0 solid;
}

.goodItem {
    display: flex;
    justify-content: space-between;
}

.goodItem +.goodItem {
    margin-top: 40rpx;
}

.expand {
    margin-top: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.expand > view {
    display: flex;
    justify-content: center;
    align-items: center;
}

.expandImage {
    margin-left: 20rpx;
    width: 30rpx;
    height: 30rpx;
}

.completeIcon {
}
