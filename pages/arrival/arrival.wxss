/* pages/arrival/arrival.wxss */

@import '../templates/bottomButton.wxss';
page {
    height: auto;
    min-height: 100%;
    background-color: #ffffff;
}

.container {
    background-color: #ffffff;
}

.headerTip {
    margin: 60rpx 48rpx 0 48rpx;
    display: flex;
    font-size: 30rpx;
    width: 100%;
    color: #999999;
}

.imageContainer {
    display: flex;
    justify-content: flex-start;
    flex-wrap:wrap;
}

.img_upload {
    margin: 32rpx 63rpx;
    width: 100%;
}

.img_box {
    margin: 52rpx 16rpx  0 48rpx;
    width: 280rpx;
    height: 200rpx;
    position: relative;
}

.img_display {
    width: 100%;
    height: 100%;
}

.deletebtn {
    height: 40rpx;
    width: 40rpx;
    border-radius: 20rpx;
    background-color: #1aad19;
    color: white;
    position: absolute;
    top: -10rpx;
    right: -6rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
