/**app.wxss**/

page {
  height: auto;
  min-height: 100%;
  font-size: 28rpx;
  background-color: #f2f2f2;
}

text {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.container {
  min-height: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.row {
  display: flex;
  width: 100%;
  align-items: center;
}

.row+.row {
  margin-top: 22rpx;
}

.row_between {
  display: flex;
  justify-content: space-between;
  width: 100%
}
