<!--pages/list/list.wxml-->
<template name="shipment">
  <view data-shipmentcode='{{shipmentCode}}' data-enterprisecode='{{enterpriseCode}}' bindtap='toDetail'>
    <view>运单号:{{shipmentCode}}</view>
  </view>
</template>

<view class="page">
  <view class="page__bd">
    <view class="weui-tab">
      <!-- tab -->
      <view class="weui-navbar">
        <block wx:for="{{tabs}}" wx:key="*this">
          <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
            <view class="weui-navbar__title">{{item}}</view>
          </view>
        </block>
        <view class="weui-navbar__slider" style="left: {{sliderLeft}}px;transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px); width: 8em"></view>
      </view>

      <!-- list -->
      <view class="weui-tab__panel">
        <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
          <view wx:for="{{shipments}}" wx:key="shipmentCode" wx:for-index="idx" wx:for-item="shipment">
            <template is="shipment" data="{{...shipment}}" />
          </view>
        </view>
        <view class="weui-tab__content" hidden="{{activeIndex != 1}}">选项二的内容</view>
      </view>


    </view>

  </view>
</view>
