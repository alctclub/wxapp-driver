/* pages/invoiceList/invoiceList.wxss */

page {
    height: 100%;
}
.invoice {
    color: #666666;
    display: flex;
    flex-direction: column;
    background-color: #ffffff;
    padding: 20px;
    margin-top: 10px;
}

.col_left {
    width: 50%;
    display: flex;
    flex-direction: column;
}

.col_right {
    width: 50%;
    display: flex;
    justify-content:flex-end;
}

.btn_apply {
    width: 80px;
    height: 30px;
    border-radius: 10px;
    background-color: #009141;
    color: #ffffff;
    display: flex;
    justify-content: center;
    align-items: center;
}

.emptyContainer {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.comment {
    color: #666666;
}

.comment_end {
    width: 100%;
    display: flex;
    justify-content: center;
}