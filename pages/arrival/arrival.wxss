/* pages/arrival/arrival.wxss */

.bottomButton {
    display: flex;
    height: 100rpx;
    background-color: white;
    width: 100%;
    justify-content: space-between;
    position: fixed;
    bottom:0;
    left: 0;
    right: 0;
}

.headerTip {
    display: flex;
    width: 100%;
}

.imageContainer {
    display: flex;
    justify-content: space-between;
}

.img_upload {
    width: 600rpx;
}

.img_box {
    width: 300rpx;
    height: 200rpx;
    position: relative;
    padding: 20rpx;
}
.img_display {
    width: 100%;
    height: 100%;
}

.deletebtn {
    height: 40rpx;
    width: 40rpx;
    border-radius: 20rpx;
    background-color: #1aad19;
    color: white;
    position: absolute;
    top: 0rpx;
    right: 0rpx;

    display: flex;
    justify-content: center;
    align-items: center;
}

.img_box + .img_box {
    margin-left: 20rpx;
}

.button {
    display: flex;
    height: 100%;
    width: 50%;
    justify-content: center;
    align-items: center
}

.button_main {
    color: white;
    background-color: #1aad19;
}