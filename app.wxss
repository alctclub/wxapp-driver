/**app.wxss**/

page {
  height: auto;
  min-height: 100%;
  font-size: 28rpx;
  background-color: #f2f2f2;
}

.container {
  min-height: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  background-color: #f2f2f2;
}

.row {
  display: flex;
  width: 100%;
  align-items: center;
}

.row + .row {
  margin-top: 20rpx;
}

.row_between {
  display: flex;
  justify-content: space-between;
  width: 100%
}

.img_arrow {
  width: 40rpx;
  height: 40rpx;
  margin: 0 10rpx;
}

.step {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  flex-shrink: 0;
}

.step_row {
  padding: 8rpx 0;
}

.step_start {
  background-color: #d4661d;
}

.step_text {
  margin-left: 10rpx;
  font-size: 32rpx;
  color: #333333;
  white-space: nowrap;
  text-overflow: ellipsis;
  width: auto;
  max-width: 9rem;
}

.setp_end {
  background-color: #49b631;
}