<template name="shipment">
  <view class="shipment" data-shipmentcode='{{shipmentCode}}' data-enterprisecode='{{enterpriseCode}}' bindtap='toDetail'>
    <view class="row_between">
      <text>运单号:{{shipmentCode}}</text>
      <text class="shipmetn_status">{{statusDisplay}}</text>
    </view>
    <view class="row">
      <view class="step step_start">起</view>
      <text style="color: #000000">{{startAddress}}</text>

      <image class="img_arrow" src="/assert/icon/arrow.png"></image>

      <view class="step setp_end">终</view>
      <text style="color: #000000">{{endAddress}}</text>
    </view>


    <view class="row">
      <text>总体积（立方米）：{{totalVolume}}</text>
    </view>
    <view class="row">
      <text>总重量（吨）<text wx:if="{{isChangedWeightVolume}}" style="color: red">{{totalWeight}}</text>
        <text wx:else>{{totalWeight}}</text>
    </text>
    </view>
    <view class="row">
      <text>运费（元）：{{shipmentCharge}}</text>
    </view>
    <view class="row">
      <text>运单确认时间：{{shipmentConfirmDate}}</text>
    </view>
    <view class="row">
      <text>车牌号：{{licensePlateNumber}}</text>
    </view>
    <view class="row">
      <text>委托方：{{enterpriseName}}</text>
    </view>
  </view>
</template>

<view class="page">
  <view wx:for="{{runningShipments}}" wx:key="shipmentCode" wx:for-index="idx" wx:for-item="shipment">
    <template is="shipment" data="{{...shipment}}" />
  </view>

  <view class="signin" bindtap='signin'>
    <text>签到</text>
  </view>
</view>
