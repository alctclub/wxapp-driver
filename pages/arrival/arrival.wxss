/* pages/arrival/arrival.wxss */

@import '../templates/bottomButton.wxss';
page {
    height: auto;
    min-height: 100%;
    background-color: #ffffff;
}

.container {
    background-color: #ffffff;
}

.headerTip {
    display: flex;
    width: 100%;
    color: #999999;
}

.imageContainer {
    display: flex;
    justify-content: space-around;
    flex-wrap:wrap;
}

.img_upload {
    width: 600rpx;
}

.img_box {
    width: 300rpx;
    height: 200rpx;
    position: relative;
}

.img_display {
    width: 100%;
    height: 100%;
}

.deletebtn {
    height: 40rpx;
    width: 40rpx;
    border-radius: 20rpx;
    background-color: #1aad19;
    color: white;
    position: absolute;
    top: 0rpx;
    right: 0rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}
