<!--pages/login/login.wxml-->
<view class='container'>
  <input id='username'
    type='text'
    confirm-type='next'
    placeholder='手机号'
    bindinput='bindinput'/>
  <input id='password'
    placeholder='密码'
    password='true'
    bindinput='bindinput'/>
  <text class="errorMessage"
    wx:if="{{errorMessage !== ''}}">{{errorMessage}}</text>
  <button id='btn_login' bindtap='login'>登录</button>
</view>
